extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let Tabletid = toShow._id 
    - let Tablet_type = toShow.Tablet_type 
    - let composition = toShow.composition 
    - let Tablet_features = toShow.Tablet_features 
    - let actionid = "/resource/Tablet/" + Tabletid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='TabletAttr mr-3') Tablet ID is: 
        div #{Tabletid} 
      div.row 
        div(class='TabletAttr mr-3') Tablet Type is: 
        div #{Tablet_type} 
      div.row 
        div(class='TabletAttr mr-3') Tablet Size is: 
        div #{composition} 
      div.row 
        div(class='TabletAttr mr-3') Tablet Cost is: 
        div #{Tablet_features} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the Tablet collection 
      window.location.href='/Tablet' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      // Don't need a body for the delete 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/Tablet' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 